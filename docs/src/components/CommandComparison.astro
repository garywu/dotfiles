---
export interface Props {
  traditional: {
    command: string;
    description?: string;
  };
  modern: {
    command: string;
    description?: string;
  };
  improvement?: string;
}

const { traditional, modern, improvement } = Astro.props;
---

<div class="command-comparison">
  <div class="comparison-grid">
    <div class="traditional">
      <h4>Traditional</h4>
      <code>{traditional.command}</code>
      {traditional.description && <p>{traditional.description}</p>}
    </div>
    <div class="modern">
      <h4>Modern</h4>
      <code>{modern.command}</code>
      {modern.description && <p>{modern.description}</p>}
    </div>
  </div>
  {improvement && (
    <div class="improvement">
      <strong>Improvement:</strong> {improvement}
    </div>
  )}
</div>

<style>
  .command-comparison {
    margin: 1.5rem 0;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    padding: 1rem;
    background-color: var(--sl-color-gray-6);
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .comparison-grid {
      grid-template-columns: 1fr;
    }
  }

  .traditional,
  .modern {
    padding: 1rem;
    border-radius: 0.25rem;
  }

  .traditional {
    background-color: var(--sl-color-orange-low);
    border: 1px solid var(--sl-color-orange);
  }

  .modern {
    background-color: var(--sl-color-green-low);
    border: 1px solid var(--sl-color-green);
  }

  h4 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  code {
    display: block;
    padding: 0.5rem;
    background-color: var(--sl-color-black);
    color: var(--sl-color-white);
    border-radius: 0.25rem;
    font-family: var(--sl-font-mono);
    font-size: 0.875rem;
    overflow-x: auto;
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    font-size: 0.875rem;
    color: var(--sl-color-text-accent);
  }

  .improvement {
    padding: 0.75rem;
    background-color: var(--sl-color-blue-low);
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }
</style>
